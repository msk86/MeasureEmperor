div
    div
        label API
        input(ng-model="form.api")
    div
        label Username
        input(ng-model="form.username")
    div
        label Password
        input(ng-model="form.password" type="password")
    div
        label JS Method
        textarea(ng-model='form.apiMethod' placeholder="function(apiResult, lastRecord, _) { return {metricValue: 1};}")
        button(ng-if="form.apiMethod" ng-click="clickTestApi()") Test
    div
        label Frequency
        input(ng-model="form.frequency" placeholder="Cron Pattern(UTC Time)")
