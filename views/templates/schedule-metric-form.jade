div
    div
        label MetricName
        input(name="metricName")
    div
        label MetricTypes
        input(name="metricType" placeholder="type1;type2")
    div
        label API
        input(name="metricType")
    div
        label Username
        input(name="username")
    div
        label Password
        input(name="password" type="password")
    div
        label JS Method
        textarea function(apiResult) { return {field1: 'A', field2: 'B', metricType: 'type1'}; }
    div
        label Frequency(Cron)
        input(name="frequency" placeholder="MIN HOUR DAY MONTH DAY-OF-WEEK")
    div
        label TimeFrame
        select(name="timeFrame")
            option(value="day") Day
            option(value="week" selected) Week
            option(value="fortnight") Fortnight
            option(value="month") Month
