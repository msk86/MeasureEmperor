div.metric(ng-class="theme")
    h2.metric-title {{metric.metricName}}
    div.metric-content
        div.left-part
            div.graph-header.sm-font
                span {{metric.timeRange.start}} - {{metric.timeRange.end}}
                div.filters
                    span(ng-repeat="f in timeFrames" ng-class="{active:f.frame==timeFrame}" ng-click="clickTimeFrameFilter(f.frame)") {{f.display}}
            div.graph-body
                metric-general(ng-if="chartType=='general'")
                line-chart(metric-name="metricName" time-frame="timeFrame" source-type="userStory" interval-type="weekly" graph-type="all" series-data="seriesData()" ng-if="chartType=='lineChart'")
                pie-chart(metric-name="metricName" time-frame="timeFrame" source-type="userStory" interval-type="weekly" graph-type="all" series-data="seriesData()" ng-if="chartType=='pieChart'")
        div.actions
            span.mm-icon.rui-icon.rui-icon-listview(ng-click="clickChartType('general')" ng-class="{active:chartType=='general'}")
            span.mm-icon.icon-stats(ng-click="clickChartType('lineChart')" ng-class="{active:chartType=='lineChart'}")
            span.mm-icon.icon-pie(ng-click="clickChartType('pieChart')" ng-class="{active:chartType=='pieChart'}")
            span.mm-icon.icon-bars
            span.mm-icon.rui-icon.rui-icon-cog
